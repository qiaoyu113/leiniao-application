Page {
  background-color: #fff;
  font-family: PingFangSC-Regular;
}

.question {
  padding: 0px 51rpx;
}

.tIndent {
  text-indent: 2em;
}

.question .title {
  color: #4A4A4A;
  font-size: 30rpx;
  font-weight:bold;
  line-height: 60rpx;
}

.question .desc {
  color: #A1A1A1;
  font-size: 28rpx;
  line-height: 60rpx;
}
.question .desc .Q {
  color: #4A4A4A;
  font-size: 28rpx;
  line-height: 60rpx;
}
.question .content .clear {
  display: block;
  content:' ';
  overflow: hidden;
  clear: both;
}
.question .list {
  margin-top: 24rpx;
  margin-bottom:40rpx;
  float: left;
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.question .list  image {
  width: 110rpx;
  height:100rpx;
}

.question .list .text {
  margin-top:20rpx;
  font-size: 26rpx;
  color: #9B9B9B;
}

.btn {
  margin-top:50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.btn button {
  width:240rpx;
}



