/* pages/payDeposit/payDeposit.wxss */
.flex{
  display: flex;
}
.flexCenter{
  display: flex;
  justify-content: center;
  align-items: center;
}
.flexDirection{
  flex-direction: column;
}
.stepsBox{
  padding: 30rpx 38rpx 0;
  width: 100%;
  height: 322rpx;
  background: #4A525C;
}
.stepsBox .flex{
  justify-content: space-between;
}
.stepsBox .stepTit{
  margin-bottom: 54rpx;
  font-size: 30rpx;
  color: #FDEED7;
  text-align: center;
}
.stepsBox .widthFix{
  margin-bottom: 23rpx;
  height: 90rpx;
}
.stepsBox .setpTop{
  display: block;
}
.stepsBox .setpTop.icon1{
  width: 90rpx;
  height: 90rpx;
}
.stepsBox .setpTop.icon2{
  width: 93rpx;
  height: 81rpx;
}
.stepsBox .setpTop.icon3{
  width: 90rpx;
  height: 73rpx;
}
.stepsBox .setpBm{
  font-size: 26rpx;
  color: #EDD6A7;
}
.arrow{
  position: relative;
  height: 90rpx;
  width: 88rpx;
}
.arrow::before{
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  margin-top: -2rpx;
  border-bottom: 4rpx solid #DFBE78;
}
.arrow::after{
  content: '';
  position: absolute;
  right: -10rpx;
  top: 50%;
  margin-top: -9rpx;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 10rpx 0 10rpx 20rpx;
  border-color: transparent transparent transparent #DFBE78;
}
.depositContent{
  padding: 30rpx;
}
.contentTop{
  padding-left: 10rpx;
  font-size: 30rpx;
  color: #4A4A4A;
}
.contentTop .question{
  margin-left: 5rpx;
  color: #4A525C;
  font-size: 30rpx;
}
.contentList{
  padding: 20rpx 25rpx 0rpx;
  flex-wrap: wrap;
  justify-content: center;
}
.contentItem{
  padding-top: 10rpx;
  width: 300rpx;
  height: 360rpx;
  background-image: linear-gradient(180deg, #F6EFE5 0%, #FDEED7 100%);
  border-radius: 10rpx;
  text-align: center;
  border: 1px solid transparent;
}
.contentItem:nth-of-type(2n){
  margin-left: 25rpx;
}
.contentItem:nth-of-type(n+3){
  margin-top: 25rpx;
}
.contentItem.checked{
  border-color: #AB541E;
  background-image: linear-gradient(180deg, #F1E0B0 0%, #DFBE78 100%);
}
.contentItem .contentItemImg{
  margin: 0 auto;
  display: block;
  width: 56rpx;
  height: 51rpx;
}
.contentItem .contentText1{
  margin-top: 4rpx;
  font-size: 28rpx;
  color: #743901;
}
.contentItem .contentText2{
  margin-top: 50rpx;
  font-size: 60rpx;
  color: #AB541E;
}
.contentItem .contentText2 text{
  font-size: 50rpx;
}
.contentItem .contentText3{
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 45rpx;
  color: #9E7C67;
  text-decoration:line-through;
  font-weight: 300;
}
/* 协议 */
.agreement{
  margin-top: 20rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #4A4A4A;
}
.agreement .text-orange{
  float: left;
  font-size: 34rpx;
  position: relative;
  padding: 0 10rpx;
  color: #DFBE78;
}
.agreement .agreement-text{
  color: #AB541E;
}
.payBtn{
  margin: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #743901;
  text-align: center;
  background-image: linear-gradient(270deg, #DFBE78 0%, #F1E0B0 100%);
  border-radius: 10rpx;
}
