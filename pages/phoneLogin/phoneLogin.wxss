/* pages/login/login.wxss */
.loginBox{
  width: 100%;
  padding: 360rpx 76rpx;
  box-sizing: border-box;
}

.loginList{
  width: 100%;
}

.loginList .hint{
  width:100%;
  display: block;
  font-size: 22rpx;
  color: #FF4652;
  margin: 4rpx 6rpx 16rpx;
}

.loginList .input{
  flex: 1;
  height: 80rpx;
  border-bottom: 1rpx solid #E8E8E8;
  font-size: 28rpx;
}

.listCode{
 display: flex;
 padding-top: 48rpx;
}

.loginList .code{
  flex: 1;
  height: 80rpx;
  border-bottom: 1px solid #E8E8E8;
  font-size: 28rpx;
}

.loginList .getCode{
  flex: 0 0 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1px solid #E8E8E8;
  font-size: 28rpx;
  color: #1C8EFA;
}

.loginList .overCode{
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1px solid #E8E8E8;
  font-size: 28rpx;
  color: #333333;
}

.btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  background: #C6E3FF;
  margin-top: 180rpx;
}

.btn_check{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 80rpx;
  background: #1C8EFA;
  margin-top: 80rpx;
}

.author{
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 36rpx;
  color:#666;
  font-size: 24rpx;
}

.link{
  color: #1C8EFA;
}