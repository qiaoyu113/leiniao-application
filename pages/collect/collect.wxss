/* pages/collect/collect.wxss */
.collectList{
  display: flex;
  margin: 0 30rpx;
  padding: 40rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #E8E8E8;
  /* position: relative; */
}

.img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.info{
  flex: 1;
  padding-left: 50rpx;
  box-sizing: border-box;
  overflow: auto;
}

.info .title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #333333;
}

.info .value{
  display: flex;
  margin-top: 24rpx;
}

.info .value .valueList{
  font-size: 24rpx;
  color: #999999;
}

.tagBox{
  display: block;
  margin-top: 4rpx;
  overflow: hidden;
}

.tagBox .tag{
  float: left;
  margin-right: 10rpx;
  background: #4fa9ff;
  border: 1px solid transparent;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  border-radius: 4rpx;
  padding: 2rpx 6rpx;
  margin-bottom: 4rpx;
}
.tagBox .tag2{
  margin-right: 10rpx;
  background: #fff;
  border: 1px solid #1C8EFA;
  border-radius: 8rpx;
  color: #1C8EFA;
  font-size: 20rpx;
  text-align: center;
  border-radius: 4rpx;
  padding: 2rpx 6rpx;
  float: left;
  margin-bottom: 4rpx;
}

.price{
  margin-top: 9px;
  color: #FF4652;
  font-size: 17px;
  font-weight: bold;
}

.price .icon{
  width: 18px;
  height: 18px;
  float: right;
  margin-top: 3px;
}

.shadow {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background: rgba(255, 255, 255, 0.7);
}

.shadow .image1{
  width: 55px;
  height: 45px;
  position: absolute;
  top: 15px;
  right: 25px;
}

.shadow .image2{
  width: 18px;
  height: 18px;
  position: absolute;
  bottom: 18px;
  right: 20px;
}

.block{
  width: 100%;
  padding: 105px 10px;
  box-sizing: border-box;
  text-align: center;
}

.block image{
  width: 255px;
  height: 175px;
  margin:auto;
}

.block .text {
  width: 100%;
  text-align: center;
  font-size: 14px;
  color: #666666;
  margin-top: 15px;
}

.block .btn{
  width: 70px;
  height: 25px;
  line-height: 25px;
  text-align: center;
  color: #666666;
  font-size: 14px;
  border: 1px solid #666666;
  border-radius: 4px;
  margin: 15px auto;
}