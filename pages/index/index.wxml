        </view>
      </view>
    </view>
  </view>
  <!--联系我们-->
  <button wx:if='{{!flag}}' class='talkToMe getPhoneNumber' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber3">联系我们
    <text class="icon-right marginLeft"></text>
  </button>
  <view wx:if='{{flag}}' class='talkToMe' data-hi='WeChat' bindtap='talphone'>联系我们
