  <!-- 精选活动 -->
  <view class="LivingTop">
    <view class="Line"></view>
    精选活动
  </view>
  <view class="activity-ct">
    <view class="activity-lt" wx:if="{{!entranceType}}" bindtap='enTranceNow'>
      <view class="activity-tit">梧桐云雀</view>
      <view class="activity-text">邀请城配司机入驻</view>
      <image src="{{image_filepath3}}" mode="widthFix"></image>
      <button class="activity-btn">立即入驻</button>
    </view>
    <view class="activity-lt" wx:if="{{entranceType}}" bindtap='goLineList'>
      <view class="activity-tit">恭喜您已成功入驻</view>
      <view class="activity-text">可选优质货源线路</view>
      <image src="https://qizhiniao-dev.oss-cn-beijing.aliyuncs.com/img/dcaca20693f0412d851f186967ba2407" mode="widthFix"></image>
      <button class="activity-btn">查看货源线路</button>
    </view>
    <view class="activity-rt" bindtap='goMiniPro'>
      <view class="activity-tit">超值买卖二手车</view>
      <view class="activity-text">海量车源、好车直卖</view>
      <image src="https://qizhiniao-dev.oss-cn-beijing.aliyuncs.com/img/a8f0c6944155457095bf544a8b1109bc" mode="widthFix"></image>
      <button class="activity-btn">立即去看车</button>
    </view>
  </view>
  <!--热门文章-->
  <view class="LivingList">
    <view class="LivingTop">
      <view class="Line"></view>
      货源推荐
      <!-- <span bindtap='moreAr'>更多</span> -->
      <button wx:if='{{!flag}}' class='moreBtn' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">更多
        <text class="icon-right marginLeft"></text>
      </button>
      <view wx:if='{{flag}}' class='moreBtn' bindtap='goLineList'>更多
        <text class="icon-right marginLeft"></text>
      </view>
    </view>
    <!--推荐列表-->
    <view class='recommended'>
      <view class='recommendedList' bindtap='goLineList2' wx:for='{{recommendArray}}' wx:key='item'>
        <view class='name'>{{item.car_type}}</view>
        <view class='recommendedList_top'>
          <view class='right'>
            <view class='value'>月收入区间：{{item.m_income}}</view>
            <view class='value'>区域：{{item.area}}</view>
          </view>
        </view>
        <view class='recomendedList_center'>
          <view class='advertisingBox'>
            <view class='advertising'>
              <view>海量货源</view>
              <view>线路稳定</view>
            </view>
            <view class='advertising'>
              <view>无账期</view>
              <view>无抽佣</view>
            </view>
            <view class='advertising'>
              <view>运费结算</view>
              <view>有保障</view>
            </view>
          </view>
        </view>
        <view class='recomended_bottom'>可选线路数：{{item.line_num}}条</view>
        <view class='state'>优质货源</view>
        <image wx:if='{{index == 1}}' class='carImage' mode='widthFix' src='{{image_filepath5}}'></image>
        <image wx:if='{{index == 0}}' class='carImage' mode='widthFix' src='{{image_filepath4}}'></image>
        <button wx:if='{{!flag}}' class='telphoneBtn' open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
        </button>
      </view>
    </view>
  </view>
