page {
  padding-bottom: 100rpx;
}

.UCenter-bg {
  /* background-image: url(https://image.weilanwl.com/color2.0/index.jpg); */
  background-image: linear-gradient(227deg, #fedc86 18%, #f3a031 90%);
  background-size: cover;
  height: 350rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  /* text-shadow: 0 0 3px rgba(0, 0, 0, 0.3); */
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: -2rpx;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

.bgColor {
  background: #3490a7;
}

.topCenter {
  width: 100%;
  overflow: hidden;
  padding: 0 60rpx;
}

.topCenter .topCenterLeft {
  width: 130rpx;
  height: 130rpx;
  border-radius: 100%;
  overflow: hidden;
  border: 6rpx solid #fff;
  margin: 20rpx auto;
}

.topCenterLeftBtn {
  width: 200rpx;
  height: 64rpx;
  background: none;
  border: 4rpx solid #fff;
  color: #fff;
  font-size: 28rpx;
  margin-top: 10rpx;
  font-weight: bold;
  line-height: 60rpx;
}

.topCenter .topCenterRight {
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color: #000;
  font-weight: bold;
  padding: 10rpx;
}

.topCenter .topCenterRight view {
  height: 50rpx;
  line-height: 50rpx;
}

.margin_right_20 {
  margin-right: 20rpx;
}

.getPhoneBox2 {
  position: relative;
  text-align: left;
}

.getPhoneBox2::after {
  border: none;
}

.getPhone {
  position: absolute;
  left: 0;
  top: 0;
}
.bgShow {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background: rgba(0, 0, 0, 0);
  overflow: hidden;
  z-index: 300;
}

.loginBtn {
  opacity: 0;
  background: rgba(0, 0, 0, 0);
  border-radius: 100rpx;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  font-size: 32rpx;
  z-index: 300;
}