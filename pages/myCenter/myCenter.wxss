page {
  width:100%;
  overflow-x: hidden;
  padding-bottom: 100rpx;
}

.UCenter-bg {
  width: 100%;
  /* background-image: url(../../lib/image/MCBG.png); */
  /* background-image: linear-gradient(227deg, #fedc86 18%, #f3a031 90%); */
  height: 514rpx;
  /* display: flex; */
  justify-content: center;
  position: relative;
  color: #fff;
  /* text-shadow: 0 0 3px rgba(0, 0, 0, 0.3); */
}

.topCenter .MCBG{
  width: 100%;
  height: 314rpx;
  position: relative;
}

.headBg{
  width: 180rpx;
  height: 180rpx;
  background: #F9F9F9;
  position: relative;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 100%;
  top: 70rpx;
  box-sizing: border-box;
  border: 4rpx solid #F9F9F9;
  text-align: center;
}

.headBg image{
  border-radius: 100%;
}

.UCenter-bg .topCenter .topCenterRight {
  width: 100%;
  position: absolute;
  padding-top: 110rpx;
  color:#fff;
  top: 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}

.UCenter-bg .image-default {
  width: 114rpx;
  height: 168rpx;
  margin: auto;
}

.UCenter-bg .image {
  width: 114px;
  height: 168px;
  margin: auto;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: -2rpx;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

.bgColor {
  background: #3490a7;
}

.topCenter {
  width: 100%;
}

.topCenter .topCenterLeft {
  width: 130rpx;
  height: 130rpx;
  border-radius: 100%;
  overflow: hidden;
  border: 6rpx solid #fff;
  margin: 20rpx auto;
}

.loginBox{
  width: 100%;
  position: relative;
  top: 110rpx;
}

.topCenterLeftBtn-Btn{
  opacity: 0;
  z-index: 100;
}

.topCenterLeftBtn {
  width: 200rpx;
  height: 64rpx;
  position: absolute;
  background: none;
  border: 1rpx solid #fff;
  color: #333333;
  font-size: 28rpx;
  line-height: 60rpx;
  left: 0;
  right: 0;
  top: 0;
  margin: auto;
}

.margin_right_20 {
  margin-right: 20rpx;
}

.getPhoneBox2 {
  position: relative;
  text-align: left;
}

.getPhoneBox2::after {
  border: none;
}

.getPhone {
  position: absolute;
  left: 0;
  top: 0;
}
.bgShow {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background: rgba(0, 0, 0, 0);
  overflow: hidden;
  z-index: 300;
}

.loginBtn {
  opacity: 0;
  background: rgba(0, 0, 0, 0);
  border-radius: 100rpx;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  font-size: 32rpx;
  z-index: 300;
}

.meanBox{
  width:100%;
  padding-right: 15px;
  box-sizing: border-box;
  margin-top: 60px;
}

.meanBox .border {
  position:relative;
  margin-left: 15px;
  /* border-top: 1px solid #E8E8E8; */
}
.meanBox .border:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background-image: linear-gradient(0deg, #E8E8E8 50%, transparent 50%);
}

.titleClass{
  padding-left: 15px;
  font-size: 14px;
}

.quit{
  width: 100%;
  text-align: center;
  color:#999999;
  color:12px;
  position: fixed;
  bottom: 120rpx;
}