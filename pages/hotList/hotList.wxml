<!--爆款上新列表页 -->
  <navBar
      background="linear-gradient(90deg, #009CF8 0%, #2F83FA 100%)"
      bindback="handlerGobackClick"
      back="{{ true }}"
    >
      <text slot="center" class="top_title" wx:if="{{ showCommend }}"
        >超值爆款</text
      >
      <text slot="center" class="top_title" wx:else>今日上新</text>
    </navBar>
  <block wx:if="{{showList}}">
    <scroll-y
      wx:if="{{showList}}"
      class="scroll-view"
      pull="{{ pull }}"
      push="{{ push }}"
      listLength="{{ carList.length }}"
      bindrefresh="refresh"
      bindtoload="toload"
    >
    <view
    wx:if="{{carList.length}}"
    wx:for="{{ carList }}" wx:key="key"
    data-index="{{item.carId}}"
    bindtap="gotoCarDetail"
    class="list_box space-between flex-y"
    style="position:{{item.rentout==1?'relative':'static'}};"
    >
      <block wx:if="{{rentOrSale =='rent'}}">
      <image wx:if="{{item.rentout==1}}" class="rentoutlogo" src="../../lib/image/rentcarimg/rentOut.png"/>
      </block>
      <block wx:if="{{rentOrSale =='sale'}}">
      <image wx:if="{{item.rentout==1}}" class="rentoutlogo" src="../../lib/image/rentcarimg/saleOut.png"/>
      </block>
      <view
      class="{{item.rentout==1?'rentout_box ':' '}} top_banner center_center"
    style="margin-bottom:{{!showCommend?'40rpx':' '}}"
      >
        <image class="left_img" src="{{item.imageUrlList[0]}}" />
          <view class="right_list">
            <text class="list_title hidden_word" >{{item.brandName}}</text>
            <text class="list_sub_lefttitle" >车龄：{{item.carAgeStr}}</text>
            <text class="list_sub_righttitle" >里程：{{item.mileageStr}}</text>
            <view class="list_carlabel" >
              <text wx:for="{{item.carLabelSet}}" wx:key="key" class="{{item.type?'list_top_type':'list_type'}}" >{{item}}</text>
            </view>
            <text class="list_price" wx:if="{{rentOrSale =='rent'}}">￥{{item.rent}}/月</text>
            <text class="list_price" wx:else>￥{{item.price}}</text>
          </view>
      </view>
      <view wx:if="{{showCommend}}" class="{{item.rentout==1?'rentout_box ':' '}} bottom_list mx-5">
        <image class="bottom_img" src="../../lib/image/rentcarimg/hot.png"/>
        <text class="bottom_title">推荐理由:</text>
        <text class="hidden_muchword">{{item.vogueReason}}</text>
      </view>
      <text class="{{showCommend?'bottom_line':'todaynewcar_bottom_line'}}"></text>
    </view>
    </scroll-y>
  </block>
  <view wx:else class="nocar_page">
    <image class="nocar_img" src="../../lib/image/rentcarimg/nocar.png" />
    <text class="nocar_title">暂无相关车源!</text>
  </view>
