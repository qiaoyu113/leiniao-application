/* pages/rentedCar/rentedCar.wxss */
page {
  box-sizing: border-box;
}

.ad_box {
  position: absolute;
  top: 540rpx;
  display: flex;
  justify-content: space-around;
  width: 750rpx;
  height: 334rpx;
  padding: 20rpx 0rpx;
}

.detail_box {
  width: 330rpx;
  height: 306rpx;
  border-radius: 8px;
  position: relative;
  padding-left: 16rpx;
  color: #fff;
}
.left_box {
  background: linear-gradient(143deg, #f9f7ff 0%, #eff1fc 100%);
}
.right_box {
  background: linear-gradient(136deg, #f4fcfb 0%, #dbeeef 100%);
}
.ad_title {
  position: absolute;
  top: 76rpx;
  left: 26rpx;
  font-size: 34rpx;
  color: #b086cc;
  font-weight: bold;
  margin-right: 10rpx;
}
.todaynew_title {
  top: 60rpx;
  left: 30rpx;
  color: #5da0b8;
}
.sub_title {
  display: block;
  position: absolute;
  left: 0;
  top: 22rpx;
  width: 110rpx;
  height: 39rpx;
  background: linear-gradient(270deg, #ff4652 0%, #ff7c8a 100%);
  border-radius: 0rpx 100rpx 100rpx 0rpx;
  font-size: 24rpx;
  padding-left: 16rpx;
  line-height: 38rpx;
}
.sub_right_title {
  display: block;
  position: absolute;
  left: 10rpx;
  top: 22rpx;
  width: 130rpx;
  height: 32rpx;
  background: linear-gradient(90deg, #ffa000 0%, #ff6400 100%);
  border-radius: 16rpx;
  font-size: 22rpx;
  padding-left: 21rpx;
  line-height: 33rpx;
}
.ad_left_img {
  position: absolute;
  right: 13rpx;
  bottom: 17rpx;
  width: 225rpx;
  height: 194rpx;
  border-radius: 8rpx;
}
.ad_right_img {
  position: absolute;
  right: 0;
  bottom: 7rpx;
  width: 275rpx;
  height: 190rpx;
  border-radius: 8rpx;
}
