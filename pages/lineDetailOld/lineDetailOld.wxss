/* pages/lineDetail/lineDetail.wxss */

page {
  background: #edecec;
}

.lineDetail {
  width: 100%;
  padding-bottom:105rpx;
}

.imgSHow {
  width: 100%;
  height: 350rpx;
  box-shadow: 2px 2px 8px 7px rgba(0,0,0,0.04);
}

.detailBox {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.boxCss {
  width: 100%;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.boxCss_top {
  width: 100%;
  overflow: hidden;
  border-bottom: 2rpx solid #f2f2f2;
}

.boxCss_top_left {
  width: calc(100% - 200rpx);
  line-height: 40rpx;
  float: left;
  font-size: 32rpx;
  color: #4a4a4a;
  font-weight: bold;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.boxCss_top_right {
  width: 200rpx;
  float: left;
  text-align: center;
  line-height: 80rpx;
  color: #7b7a7a;
}

.boxCss_center {
  width: 100%;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 10rpx;
}

.boxCss_list {
  width: 100%;
  overflow: hidden;
  font-size: 30rpx;
  color: #4a4a4a;
  line-height: 43rpx;
}

.boxCss_list_left {
  width: 50%;
  float: left;
}

.boxCss_list_right {
  width: 50%;
  float: right;
  text-align: right;
}

.textarea {
  font-size: 26rpx;
  color: #9b9b9b;
}

.btnMent {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  padding: 10rpx 14rpx;
  box-sizing: border-box;
  background: #fff;
}

.btnMent .btnLeft {
  /* width: 49%; */
  width: 100%;
  height: 78rpx;
  line-height: 78rpx;
  background: #fdeed7;
  border-radius: 17rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fa9c46;
  float: left;
  border:none;
}

.btnMent button {
  width: 49%;
  height: 78rpx;
  opacity: 0;
  position: absolute;
  top:10rpx;
  left:14rpx;
}

.btnMent .btnRight {
  width: 49%;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  background-image: linear-gradient(270deg, #fa9b44 0%, #fdc379 100%);
  border-radius: 17rpx;
  font-size: 36rpx;
  color: #fff;
  float: right;
}

.margin100 {
  margin-bottom: 98rpx;
}

/* 推荐有礼 */

.recommend {
  width: 92%;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  z-index: 200;
  padding: 30rpx 53rpx;
  box-sizing: border-box;
}

.close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  color: #ccc;
  font-size: 40rpx;
}

.recommend .title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 40rpx;
  color: #333;
  margin-top: 40rpx;
}

.recommend .title text {
  color: #ec562d;
  margin-right: 20rpx;
}

.content {
  font-size: 30rpx;
  color: #4a4a4a;
  margin-top: 40rpx;
  max-height:700rpx;
  overflow-x: scroll;
  background: /* Shadow covers */
  linear-gradient(white 30%, rgba(255, 255, 255, 0)), linear-gradient(rgba(255, 255, 255, 0), white 70%) 0 100%, /* Shadows */
  radial-gradient(50% 0, farthest-side, rgba(0, 0, 0, .2), rgba(0, 0, 0, 0)), radial-gradient(50% 100%, farthest-side, rgba(0, 0, 0, .2), rgba(0, 0, 0, 0)) 0 100%;
  background: /* Shadow covers */
  linear-gradient(white 30%, rgba(255, 255, 255, 0)), linear-gradient(rgba(255, 255, 255, 0), white 70%) 0 100%, /* Shadows */
  radial-gradient(farthest-side at 50% 0, rgba(0, 0, 0, .2), rgba(0, 0, 0, 0)), radial-gradient(farthest-side at 50% 100%, rgba(0, 0, 0, .2), rgba(0, 0, 0, 0)) 0 100%;
  background-repeat: no-repeat;
  background-color: white;
  background-size: 100% 40px, 100% 40px, 100% 14px, 100% 14px;
  /* Opera doesn't support this in the shorthand */
  background-attachment: local, local, scroll, scroll;
}

.contentList{
  margin-bottom:10rpx;
}

.contentList text {
  font-size: 30rpx;
  color: #f55e01;
}

.btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fac844;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #4a4a4a;
  margin: 25rpx 0;
}

button::after{ border: none; }

.marginTop {
  margin-top: 30rpx;
}

.recommendBg {
  width: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
  right: 0;
  background: rgba(0, 0, 0, 0.50);
}

.consulting {
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  position: fixed;
  right: 43rpx;
  bottom: 140rpx;
  background: #ffa000;
  box-shadow: 3px 3px 14px 0 rgba(0, 0, 0, 0.50);
  text-align: center;
  color: #fff;
  font-size: 26rpx;
  border-radius: 100%;
}
