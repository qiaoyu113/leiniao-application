        <view class='bottom'>
          <view class="topVal2">订单单号：{{item.orderId}}</view>
          <view class="center">{{item.cooperationMode}}</view>
          <view style="overflow: hidden;">
            <view class="left">车型：{{ item.carTypeName }}</view>
            <view wx:if='{{item.refundStatus > 0}}'>
              <view class='right2' bindtap='goDetail' data-id="{{ item.orderId }}">查看详情</view>
              <!-- <view class='right2' bindtap='goRefundDetail' data-id="{{ item.orderId }}">退款详情</view> -->
            </view>

            <view wx:if='{{item.refundStatus <= 0}}'>
              <view class='right2' bindtap='goDetail' data-id="{{ item.orderId }}" wx:if='{{item.payStatus != 1}}'>查看详情</view>
              <!-- <view class='right' bindtap='goPay' data-id="{{ item.orderId }}" wx:if='{{item.payStatus == 1 || item.refundStatus == 5}}'>前往支付</view> -->
              <view class='right2' bindtap='goRefund' data-id="{{ item.orderId }}" wx:if='{{ item.payStatus != 1 && item.refundStatus != 5 && item.payStatus != 2 && item.payStatus != 6 }}'>申请退款</view>
            </view>
          </view>
          <view class="bottomVal arrow" wx:if="{{ item.contractStatus && item.contractStatus != '无' }}" bindtap="goSign" data-id="{{ item.contractId }}"
          data-orderid="{{ item.orderId }}" data-phone='{{ item.certifiationPhone }}' data-contractstatus='{{ item.contractStatus }}'>
            {{ item.subject }}
            <text class="icon-right marginLeft" style="float:right;margin-top:6rpx;"></text>
            <text style="color: #ffa000; float:right;" wx:if="{{ item.contractStatus == '未签约' }}" >未签约</text>
            <text style="color: #5BB260; float:right;" wx:else >已签约</text>
          </view>
        </view>
      </view>
      <view class="noMore" wx:if='{{checkPaymentList2.length == 0}}'>- 暂无订单 -</view>
    </van-tab>
    <van-tab title="缴费记录">
      <view class="checkPaymentList" wx:for='{{checkPaymentList}}' wx:key='{{inx}}'>
