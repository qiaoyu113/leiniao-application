/* components/hotNew/hotNew.wxss */
.ad_box {
  display: flex;
  justify-content: space-between;
  width: 750rpx;
  height: 334rpx;
  padding: 20rpx 30rpx;
}

.detail_box {
  width: 330rpx;
  height: 306rpx;
  border-radius: 8px;
  position: relative;
  color: #fff;
}
.left_box {
  background: linear-gradient(143deg, #f9f7ff 0%, #eff1fc 100%);
}
.right_box {
  overflow: hidden;
  background: linear-gradient(136deg, #f4fcfb 0%, #dbeeef 100%);
}
.ad_title {
  position: absolute;
  top: 20rpx;
  right: 21rpx;
  font-size: 34rpx;
  color: #b086cc;
  font-weight: bold;
  margin-right: 10rpx;
}
.todaynew_title {
  top: 20rpx;
  right: 20rpx;
  color: #5da0b8;
}
.sub_title {
  display: block;
  position: absolute;
  left: 0;
  top: 22rpx;
  width: 130rpx;
  height: 39rpx;
  background: linear-gradient(270deg, #ff4652 0%, #ff7c8a 100%);
  border-radius: 0rpx 100rpx 100rpx 0rpx;
  font-size: 24rpx;
  padding-left: 16rpx;
  line-height: 38rpx;
}
.sub_right_title {
  display: block;
  position: absolute;
  left: -10rpx;
  top: 22rpx;
  width: 130rpx;
  height: 39rpx;
  background: linear-gradient(90deg, #ffa000 0%, #ff6400 100%);
  border-radius: 16rpx;
  font-size: 24rpx;
  padding-left: 21rpx;
  line-height: 39rpx;
}
.ad_left_img {
  position: absolute;
    right: -50rpx;
    bottom: -17rpx;
    width: 365rpx;
    height: 289rpx;
    border-radius: 8rpx;
}
.ad_right_img {
  position: absolute;
  right: -21px;
  bottom: -18rpx;
  width: 353rpx;
  height: 282rpx;
  border-radius: 8rpx;
}
