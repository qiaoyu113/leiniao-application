<view class="px-15">
  <canvas class="none" id="theCanvas" type="2d"></canvas>
  <view class="py-20 space-between bb-solid-e" bindtap="onViewDetail">
    <image mode="aspectFill" class="{{'img-100 ' + info.rotateClass}}" style="border-radius: 8rpx;" src="{{info.pic}}"></image>
    <view class="flex-y space-between pt-5" style="width: 430rpx;">
      <view class="text-14 text-gray-3 text-ellipsis" style="font-weight: 500;">{{info.fullDesc}}</view>
      <view>
        <view class="text-12 text-gray-9 flex">车龄：{{info.carAgeStr}}<text style="width: 30rpx;"></text>里程：{{info.mileageStr}}</view>
        <view class="flex" style="margin: 5rpx 0;">
          <view wx:for="{{info.labels}}" wx:key="index" wx:for-item="label" style="border-radius: 4rpx; padding: 2rpx 6rpx;"
            class="align-center mr-5 text-10 {{label.bold ? 'bg-blue text-white b-solid-trans' : 'bg-white text-blue-3 b-solid-blue'}}">{{label.name}}</view>
        </view>
      </view>
      <view class="text-red text-17 text-bold align-center">
        <text class="text-gray-9 text-12 text-normal" wx:if="{{!isRent}}">参考价：</text>
        ¥{{isRent ? info.yearlyRent : info.price}}
        <text wx:if="{{isRent}}">/月</text>
        <text wx:if="{{!isRent}}">万</text>
      </view>
    </view>
  </view>
</view>