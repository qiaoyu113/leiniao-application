.nav-bar {
  position: fixed;
  width: 100%;
  top: 0;
  color: #fff;
  background: pink;
  text-align: center;
}
.nav-bar .nav_city {
  width: 15%;
  position: absolute;
  bottom: 5px;
  left: 2px;
  font-size: 14px;
}
.nav-bar .search {
  width: 50%;
  color: #333;
  font-size: 14px;
  background: #fff;
  border-radius: 50px;
  background: #ddd;
  padding-left: 14px;
  position: absolute;
  bottom: 5px;
  right: 100px;
}
.nav_title {
  font-size: 14px;
}
.title_box {
  width: 100%;
  height: 25px;
  position: absolute;
  bottom: 5px;
}
